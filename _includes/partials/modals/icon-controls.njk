<div 
  class="fixed top-0 left-0 w-100p h-100vh bg-black bg-opacity-40 z-9"
  x-cloak
  x-show="dialogs.iconControls"
  x-transition:enter="duration-200"
  x-transition:enter-start="opacity-0"
  x-transition:enter-end="opacity-100"
  @click="dialogs.iconControls = false"
>
</div>

<div 
  class="flex fixed top-0 right-0 w-320 z-9 bg-background"
  x-cloak
  x-transition:enter="duration-300"
  x-transition:enter-start="opacity-0"
  x-transition:enter-end="opacity-100"
  x-show="dialogs.iconControls"
  x-transition:enter="duration-200 delay-100 transform"
  x-transition:enter-start="opacity-0 translate-x-192"
  x-transition:enter-end="opacity-100 translate-x-0"
>
  <div class="relative w-100p h-100vh p-20 overflow-auto">
    <div class="absolute top-0 right-0 m-16">
      <button class="w-32 h-32 flex align-items-center justify-content-center" @click="dialogs.iconControls = false">
        <ion-icon name="close" class="w-24 h-24 color-pink-300"></ion-icon>
      </button>
    </div>

    <div class="pt-16">
      

      <h3 class="bold text-md color-heading-accent mb-12">Choose your flavor</h3>
      <p class="color-paragraph text-sm mb-28">
        Customize the controls below to pick and choose your ideal icon style.
      </p>

      <ul class="gutter-y-32 mt-32">
        <li>
          <label class="block text-2xs color-white extrabold tracking-loose uppercase mb-6">Grid Size</label>
          <div class="grid grid-cols-4 gap-6 p-6 radius-md bg-white bg-opacity-10">
            <button class="flex align-items-center justify-content-center h-32 text-xs tracking-loose bold radius-sm py-4" :class="explorerSettings.gridSize == 'is-xs' ? 'bg-heading-accent color-black' : 'color-white hover.bg-pink-200 hover.bg-opacity-10'" @click="explorerSettings.gridSize = 'is-xs'">
              XS
            </button>
            <button class="flex align-items-center justify-content-center h-32 text-xs tracking-loose bold radius-sm py-4" :class="explorerSettings.gridSize == 'is-sm' ? 'bg-heading-accent color-black' : 'color-white hover.bg-pink-200 hover.bg-opacity-10'" @click="explorerSettings.gridSize = 'is-sm'">
              SM
            </button>
            <button class="flex align-items-center justify-content-center h-32 text-xs tracking-loose bold radius-sm py-4" :class="explorerSettings.gridSize == 'is-md' ? 'bg-heading-accent color-black' : 'color-white hover.bg-pink-200 hover.bg-opacity-10'" @click="explorerSettings.gridSize = 'is-md'">
              MD
            </button>
            <button class="flex align-items-center justify-content-center h-32 text-xs tracking-loose bold radius-sm py-4" :class="explorerSettings.gridSize == 'is-lg' ? 'bg-heading-accent color-black' : 'color-white hover.bg-pink-200 hover.bg-opacity-10'" @click="explorerSettings.gridSize = 'is-lg'">
              LG
            </button>
          </div>
        </li>

        <li>
          <label class="block text-2xs color-white extrabold tracking-loose uppercase mb-6">Style</label>
          <ul class="gutter-y-4">
            <li class="">
