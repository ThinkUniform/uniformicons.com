        </button>
        <button class="inline-flex align-items-center justify-content-center w-28 h-28 color-yellow-300 bg-black hover.bg-yellow-400 transition-100 radius-sm">
          <ion-icon name="cloud-download" class="w-16 h-16"></ion-icon>
        </button> #}
      </div>

      <div class="flex sm.hidden align-items-center gap-24 border-t-1 border-white border-opacity-20 pt-16">
        <button class="flex align-items-center color-yellow-300 semibold text-sm" @click="copySVG()">
          <ion-icon name="code-slash" class="w-20 h-20 mr-6"></ion-icon> <span x-text="iconDetails.copyText">Copy SVG</span>
        </button>
        <a :href="iconDetails.url" target="_self" class="color-yellow-300 semibold text-sm">
