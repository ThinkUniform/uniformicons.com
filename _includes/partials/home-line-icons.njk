<div class="relative h-512">
  <div x-show="tab == 0">
    <ul class="explorer-grid" :class="explorerSettings.gridSize" x-show="iconSettings.cornerRadius == 0">
      {%- for category in icons.categories -%}
        {%- for icon in category.icons -%}
          <li class="grid-icon" alt="{{ icon.name }}" data-keywords="{{ icon.keywords }}">
            <button class="pointer-events-none ratio-square flex align-items-center justify-content-center hover.bg-white hover.bg-opacity-10 transition-100 radius-lg relative" @click.stop="openIconDetail(name = '{{ icon.name }}', slug = '{{ icon.slug }}', id = 'line-sharp-{{ icon.slug }}', url = '/assets/icons/line/sharp/{{ icon.url }}'), iconDetails.copyText = 'Copy SVG', dialogs.iconDetails = true">
              <div class="absolute top-50p left-50p transform translate-x-n50p translate-y-n50p" id="line-sharp-{{ icon.slug }}">
                {% include "icons/line/sharp/" + icon.url %}
              </div>
            </button>
          </li>
        {%- endfor -%}
      {%- endfor -%}
    </ul>

    <ul class="explorer-grid" :class="explorerSettings.gridSize" x-show="iconSettings.cornerRadius == 2">
      {%- for category in icons.categories -%}
        {%- for icon in category.icons -%}
          <li class="grid-icon" alt="{{ icon.name }}" data-keywords="{{ icon.keywords }}">
            <button class="pointer-events-none ratio-square flex align-items-center justify-content-center hover.bg-white hover.bg-opacity-10 transition-100 radius-lg relative" @click.stop="openIconDetail(name = '{{ icon.name }}', slug = '{{ icon.slug }}', id = 'line-normal-{{ icon.slug }}', url = '/assets/icons/line/normal/{{ icon.url }}'), iconDetails.copyText = 'Copy SVG', dialogs.iconDetails = true">
              <div class="absolute top-50p left-50p transform translate-x-n50p translate-y-n50p" id="line-normal-{{ icon.slug }}">
                {% include "icons/line/normal/" + icon.url %}
              </div>
            </button>
          </li>
        {%- endfor -%}
      {%- endfor -%}
    </ul>

    <ul class="explorer-grid" :class="explorerSettings.gridSize" x-show="iconSettings.cornerRadius == 4">
      {%- for category in icons.categories -%}
        {%- for icon in category.icons -%}
          <li class="grid-icon" alt="{{ icon.name }}" data-keywords="{{ icon.keywords }}">
            <button class="pointer-events-none ratio-square flex align-items-center justify-content-center hover.bg-white hover.bg-opacity-10 transition-100 radius-lg relative" @click.stop="openIconDetail(name = '{{ icon.name }}', slug = '{{ icon.slug }}', id = 'line-rounded-{{ icon.slug }}', url = '/assets/icons/line/rounded/{{ icon.url }}'), iconDetails.copyText = 'Copy SVG', dialogs.iconDetails = true">
